@using BlogWebSite.Client.Layouts.Componets;

@inherits LayoutComponentBase

<BaseLayout NavBarApp="app" FooterApp="true">
    <ChildContent>
        @Body
    </ChildContent>
</BaseLayout>

@code{
    bool app;
    protected override void OnInitialized()
    {
        base.OnInitialized();
        if (NavigationManager.Uri==NavigationManager.BaseUri)
        {
            app = false;
        }
        else
        {
            app = true;
        }
    }
}